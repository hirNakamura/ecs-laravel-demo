{
	"family": "demo-task",
	"taskRoleArn": "ecsTaskExecutionRole",
	"executionRoleArn": "ecsTaskExecutionRole",
	"networkMode": "awsvpc",
	"containerDefinitions": [
		{
			"name": "nginx",
			"image": "nginx:1.20-alpine",
			"portMappings": [
				{
					"containerPort": 80,
					"hostPort": 80,
					"protocol": "tcp"
				}
			],
			"essential": true,
			"dependsOn": [
				{
					"containerName": "laravel",
					"condition": "START"
				}
			],
			"readonlyRootFilesystem": false,
			"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "ecs-hands-on",
					"awslogs-region": "us-east-2",
					"awslogs-stream-prefix": "nginx"
				}
			}
		},
		{
			"name": "laravel",
			"image": "php:8.0-fpm",
			"essential": false,
			"environment": [
				{
					"name": "APP_ENV",
					"value": "production"
				},
				{
					"name": "APP_DEBUG",
					"value": "true"
				},
				{
					"name": "LOG_CHANNEL",
					"value": "stderr"
				}
			],
            "secrets": [
                {
                    "name": "APP_KEY",
                    "valueFrom": "/APP_KEY"
                }
            ],
			"privileged": false,
			"readonlyRootFilesystem": false,
			"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "ecs-hands-on",
					"awslogs-region": "us-east-2",
					"awslogs-datetime-format": "%Y-%m-%d %H:%M:%S",
					"awslogs-stream-prefix": "laravel"
				}
			}
		}
	],
	"requiresCompatibilities": [
		"FARGATE"
	],
	"cpu": "256",
	"memory": "512"
}
